<!-- 
sequência de launch:
1 - rodar Turtlesim node
2 - remover a primeira tartaruga
3 - rodar componente que cria uma nova tartaruga 
4 - carregar componente com nome de nó 'turtle_controller_1' e tartaruga 'abc'
5 - utilizar o lifecycle manager para configurar/ativar o nó 'turtle_controller_1'
-->

<launch>
    <node pkg="turtlesim" exec="turtlesim_node" />
    <executable cmd="ros2 service call /kill turtlesim/srv/Kill '{name: 'turtle1'}'" output="screen" />
    <node pkg="rclcpp_components" exec="component_container_mt" name="turtle_container" />
    <executable cmd="ros2 component load /turtle_container final_project_level3_cpp final_project::TurtleController -r __node:=turtle_controller_1 -p turtle_name:=abc" 
    output="screen" />
    <node pkg="lifecycle_py" exec="lifecycle_node_manager" >
        <param name="managed_node_name" value="turtle_controller_1" />
    </node>
</launch>
